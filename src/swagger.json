      "delete": {
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "summary": "Delete product",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
