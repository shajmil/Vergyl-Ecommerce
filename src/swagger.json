    "/admin/reports/orders": {
      "get": {
        "tags": ["Admin"],
        "security": [{ "bearerAuth": [] }],
        "summary": "Get order reports",
        "parameters": [
          {
            "in": "query",
            "name": "start_date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "in": "query",
            "name": "end_date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date"
            }
          },
          {
            "in": "query",
            "name": "status",
            "schema": {
              "type": "string",
              "enum": ["Pending", "Processed", "Shipped", "Delivered", "Canceled"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Order reports retrieved successfully"
          }
